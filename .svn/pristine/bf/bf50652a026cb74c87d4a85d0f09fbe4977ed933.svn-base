<!doctype html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="renderer" content="webkit"> 
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta content='IE=edge,chrome=1' http-equiv='X-UA-Compatible' />
<meta http-equiv="X-UA-Compatible" content="IE=IE8"/> 
<title>数据库连接</title>
<script type="text/javascript" src="{jmpurl}/ui/lib/jquery/jquery-1.8.3.min.js"></script>
<style>
body{
	font-family:"微软雅黑";
	font-size:14px;
}
th,td{
	border-color:#B8B8B8;
	border-style:solid;
	background-color:#00CCFF;
	color:#FFFFFF;
	padding:5px;
	text-align:center;
}
td{
	background-color:#FFFFFF;
	color:#53365C;
}
a{
	text-decoration:underline;
	cursor:pointer;
}
button{
	margin:2px 2px;
}
</style>
<script> 
function removeTask(taskId,taskGroup){
	$.ajax({
		type: "post",
		url: 'remove.do',
		data:{taskId:taskId,taskGroup:taskGroup},
		success : function(){
			window.location.reload();
		},
		error : function(){
			alert('操作出错');
			window.location.reload();
		}
	});
}
</script>
</head>

<body>
<h3>当前时间：2015-06-18 14:27</h3>
<div class="thread">
<h3 style="border-bottom:1px dashed #53365C">
连接状态
</h3> 
<table width="100%" border="1" cellpadding="0" cellspacing="0">
	<tr>
    	<th>IP</th>
        <th>库名</th>
        <th>服务器连接状态</th>
        <th>数据库连接状态</th>
        <th>读权限</th>
        <th>写权限</th> 
    </tr>
    <!--data start-->
    <tr>
    	<td>{ip}</td>
        <td>{dataname}</td>
        <td>{serverstate}</td>
        <td>{datastate}</td>
        <td>{readstate}</td>
        <td>{writestate}</td> 
    </tr>
    <!--data end-->
   
</table>
 
 
</div>
 
</body>
</html>
