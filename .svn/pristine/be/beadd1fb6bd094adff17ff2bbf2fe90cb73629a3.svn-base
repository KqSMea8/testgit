@charset "UTF-8";
/* CSS Document */
* {
	padding: 0px;
	margin: 0px auto;
	color: #3d3d3d;
	font-family:"微软雅黑";
	line-height: 200%;
}
/*基本信息*/
body {
	background: #fff;
	padding: 0px;
	margin: 0px auto;
	font-size:14px;
}
a:link, a:visited {
	color: #3d3d3d;
	text-decoration: none;
}
a:hover {
	color: #3d3d3d;
	text-decoration: underline;
}

/*页面层容器*/
#container {
	width: 100%;
	margin: 0px auto;
}

/*页面主体*/
#Pagebody {
	width: 100%;
	margin: 0px auto;
	background-color: #e9e9e9;
	overflow: hidden;
}
#article {
	width: 100%;
	max-width: 1000px;
	margin: 10px auto;
	background-color: #fff;
	overflow: hidden;
}
#content {
	width: 85%;
	margin: auto;
}
#title {
	overflow: hidden;
	height: auto;
	min-height: 55px; 
	text-align: left;
	font-size: 22px;
	font-weight: bold;
	line-height: 180%; 
	border-bottom: #6F6F6F 1px solid;
}
#liutp {
	text-align: left;
}
#from, #pubdate {
	float: left;
	margin: 10px;
	margin-bottom: 0px;
	font-size: 12px;
	color: #989898;
}
#liudo {
	margin: 0px auto;
}
#sourceinfo {
	float: left;
	margin: 10px 10px 10px 0px;
	margin-bottom: 0px;
	font-size: 12px;
	color: #335075;
}

#readcount, #goodcount {
	float: left;
	margin: 10px;
	margin-bottom: 0px;
	font-size: 12px;
	color: #989898;
}

#downjmp {
	float: right;
	margin: 10px 0px 10px 0px;
	margin-bottom: 0px;
	font-size: 12px;
	color: #335075;
}

#text {
	clear: both; 
	margin: auto 10px;
	text-align: left;
	font-size: 16px;
}
video {
	background-color: black;
}
#editor {
	clear: both;
	float: right;
	margin: 10px;
	margin-top: 30px;
	font-size: 12px;
	color: #989898
}

#seesource { 
	valign:middle; 
	text-align: center;
	padding-top:2px; 
	height:24px; 
	color: #989898
}

#downurl { 
	valign:middle; 
	text-align: center;
	padding-top:2px; 
	height:24px; 
	color: #989898
}


#kit {
	clear: both;
	float: right;
	margin: 20px auto 30px auto;
	border-top: #989898 1px solid;
	width: 100%;
	line-height: 240%;
}
#kit a:link, #kit a:visited {
	margin-left: 10px;
	font-size: 12px;
}
#kit img {
	vertical-align: text-bottom;
	margin-right: 5px;
}

#gadget {
	max-width: 1000px;
	width: 100%;
	margin: 10px auto;
	background-color: #fff;
	overflow: hidden;
}
#gadgetbody {
	width: 85%;
	min-width: 300px;
	margin: 30px auto;
	overflow: hidden;
}
#gadgetbox, #gadgetboxR {
	width: 46%;
	min-width: 300px;
}
#gadgetbox {
	float: left;
}
#gadgetboxR {
	float: right;
}
#catabanner {
	border-bottom: #ccc 1px solid;
	overflow: hidden;
}
#decoration {
	float: left;
	height: 18px;
	width: 3px;
	margin: 10px;
	background-color: #335075;
}
#catabanner {
	height: 38px;
}
#cataname {
	float: left;
	margin-top: 12px;
	line-height: 100%;
	color: #335075;
	font-weight: bold;
} 
 